{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        /* Other */
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "incremental": true,
        "esModuleInterop": true,
        "types": ["vitest/globals", "@testing-library/jest-dom", "cypress", "reflect-metadata"],
        "paths": {
            "@ui/*": ["./src/components/ui/*"],
            "@icon/*": ["./src/components/icons/*"],
            "@model/*": ["./src/core/domain/model/*"],
            "@repositoryInt/*": ["./src/core/domain/repository/*"],
            "@repositoryImpl/*": ["./src/core/data/repository/*"],
            "@useCase/*": ["./src/core/domain/useCase/*"],
            "@dataSource/*": ["./src/core/data/dataSource/*"],
            "@ioc/*": ["./src/core/ioc/*"],
            "@presentation/*": ["./src/core/presentation/*"],
            "@libs/*": ["./src/libs/*"],
            "@hooks/*": ["./src/hooks/*"]
        }
    },
    "include": ["src", "**/*.ts"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
